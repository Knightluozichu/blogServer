datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  email           String         @unique
  name            String
  password        String         @default("")
  isOnline        Boolean        @default(false)
  chatTitleInfo   ChatTitleInfo? @relation(fields: [chatTitleInfoId], references: [id])
  chatTitleInfoId String?        @db.ObjectId
}

model ChatDetail {
  order           Int           @id @map("_id")
  type            Int
  content         String
  time            String
  icon            String
  isOwner         Boolean
  name            String
  counter         Int
  ChatTitleInfo   ChatTitleInfo @relation(fields: [chatTitleInfoId], references: [id])
  chatTitleInfoId String        @db.ObjectId
}

model ChatTitleInfo {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  contents      ChatDetail[]
  icon          String?
  isReadMsg     Boolean?
  isMute        Boolean?
  chatConnectId Int?
  User          User[]
}
